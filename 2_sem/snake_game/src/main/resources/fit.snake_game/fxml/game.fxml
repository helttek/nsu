<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fit.snake_game.controller.GameController"
            prefHeight="650.0" prefWidth="850.0"
            fx:id="root"
            onKeyPressed="#handleOnKeyPressed">

    <AnchorPane fx:id="leftAnchorPane" style="-fx-border-width: 10px">
        <ListView fx:id="playersListView" layoutY="89"
                  style="-fx-border-color: black; -fx-border-width:4px; -fx-background-color: rgba(255,251,0,0.2); -fx-control-inner-background: rgba(255,251,0,0.2)"/>
        <Label fx:id="playersLabel"
               layoutX="10.0" layoutY="40.0"
               style="-fx-font-size: 16px; -fx-alignment: center;"
               text="Players"/>
    </AnchorPane>

    <GridPane fx:id="cellsPanel" layoutX="311.0" layoutY="89.0"/>

    <ImageView fx:id="backButton" onMouseClicked="#backButtonPressed" pickOnBounds="true" preserveRatio="true" x="311.0"
               y="16.0" fitWidth="170" fitHeight="45">
        <Image url="@/fit.snake_game/buttons/back_button/backBut.png"/>
    </ImageView>
</AnchorPane>
